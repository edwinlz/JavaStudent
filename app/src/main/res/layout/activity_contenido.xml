<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="8dp"
                android:id="@+id/linearContenido1">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/conteAvatar"
                    android:src="@drawable/libro"
                    android:scaleType="fitCenter"
                    android:background="@drawable/ic_shape_circle"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/conteTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_below="@+id/imageButton2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Definición puntual de lo que es Java y sus alcances. Definición puntual"
                    android:id="@+id/conteDesc"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="false"
                    android:textAlignment="center" />
            </LinearLayout>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/verificar"
                android:src="@drawable/list"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:padding="6dp"
                android:background="@drawable/ic_shape_circle_otro"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Examen"
                android:id="@+id/textView"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@+id/verificar"
                android:layout_alignRight="@+id/verificar"
                android:layout_alignEnd="@+id/verificar" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="8dp"
            android:id="@+id/linearContenido2"
            android:layout_below="@+id/linearContenido1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="363dp"
                android:id="@+id/scrollView2" >

                <WebView
                    android:id="@+id/conteTexto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:background="@drawable/fondo_modulo_v2"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_below="@+id/imageButton"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:typeface="monospace" />
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>